<% @item.errors.full_messages.each do |message| %>
    <%= message %>
<% end %>

<%= form_for [:admin, @item] do |f| %>
    <%= f.label :name %>
    <br/>
    <%= f.text_field :name %>
    <br/>
    <%= f.label :description %>
    <br/>
    <%= f.text_area :description %>
    <br/>
    <%= f.label :price %>
    <br/>
    <%= f.text_field :price %>
    <br/>
    <%= f.label :category %>
    <br/>
    <%= f.collection_select(:category, Category.all, :id, :name, include_blank: "Please Select") %>
    <br/>
    <%= f.label :image_url %>
    <%= f.text_field :image_url %>
    <br/>
    <%= f.submit "Add Meal" %>
<% end %>