<% @item.errors.full_messages.each do |message| %>
    <%= message %>
<% end %>

<div class="row">

  <div class=col-lg-12">

    <div class="admin-item-form">

      <%= form_for [:admin, @item] do |f| %>
          <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name %>
          </div>
          <div class="form-group">
            <%= f.label :description %>
            <%= f.text_area :description %>
          </div>
          <div class="form-group">
            <%= f.label :price %>
            <%= f.text_field :price %>
          </div>
          <div class="form-group">
            <%= f.label :category %>
            <%= f.collection_select(:category, Category.all, :id, :name, include_blank: "Please Select") %>
          </div>
          <div class="form-group">
            <%= f.label :image_url %>
            <%= f.text_field :image_url %>
          </div>
          <%= f.submit "Add Meal" %>
      <% end %>

    </div>
  </div>
</div>