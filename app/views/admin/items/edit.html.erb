<%= render partial: "layouts/page_title", locals: { page_title: "Edit Meal" } %>
<div class="row">
  <div class="col-lg-12">
    <div class="admin-item-form">

      <%= form_for [:admin, @item] do |f| %>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: "form-control", placeholder: "Name" %>
        </div>

        <div class="form-group">
          <%= f.label :description %>
          <%= f.text_area :description, class: "form-control", placeholder: "Description"  %>
        </div>

        <div class="form-group">
          <%= f.label :price %>
          <%= f.text_field :price, class: "form-control", placeholder: "Price"  %>
        </div>

        <div class="form-group btn btn-default dropdown-toggle">
          <%= f.label :category %>
          <%= f.collection_select(:category, Category.all, :id, :name, placeholder: @item.category.name) %>
        </div>

        <div class="form-group">
          <%= f.label :image_url %>
          <%= f.text_field :image_url, class: "form-control", placeholder: "Image Url"  %>
        </div>

        <div class="form-group btn btn-default dropdown-toggle">
          <%= f.label :status %>
            <%= f.select(:status, Item.statuses.keys.map {|status| [status.titleize,status]}) %>
        </div><br><br>
        <%= f.submit "Update Meal", class: "btn btn-default" %>
      <% end %>
    </div>
  </div>
</div>
