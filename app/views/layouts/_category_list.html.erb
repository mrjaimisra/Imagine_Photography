<div class="list-group">
  <% if photographer = params[:photographer] %>
    <ul>
      <li><%= link_to "All", photographer_photos_path, class: "list-group-item" %></li>
      <% photo_categories.each do |category| %>
        <li>
          <%= link_to category.name,
                      photographer_category_path(photographer: photographer, name: category.name),
                      class: "list-group-item"  %>
        </li>
      <% end %>
    </ul>
  <% else %>
    <ul>
        <li>
          <%= link_to "All", explore_path, class: "list-group-item"%>
        </li>
      <% photo_categories.each do |category| %>
        <li>
          <%= link_to category.name, photos_category_path(category),
                      class: "list-group-item" %>
        </li>
      <% end %>
    </ul>
  <% end %>
</div>
