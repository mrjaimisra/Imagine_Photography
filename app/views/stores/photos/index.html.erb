<%= render partial: "stores/header" %>

<div class="container">
  <div class="row">
    <h1 class="col-md-1">Photos</h1>
    <% if current_user && current_user.store_admin? &&
                          current_user.store_id == @photographer.id %>
      <div class="col-md-2 pull-right upload-photo">
        <%= link_to "Upload photo to portfolio",
                    new_photographer_photo_path(store: @photographer),
                    class: "btn btn-primary" %>
      </div>
    <% end %>
    </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render partial: "layouts/category_list" %>
    </div>

    <div class="col-md-9">
      <%= render partial: "layouts/photos_index" %>
      <%= will_paginate @photos %>
    </div>
  </div>
</div>
