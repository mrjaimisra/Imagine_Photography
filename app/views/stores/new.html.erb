<div class="container">
  <div class="row">
    <div class="col-lg-8 col-md-offset-2">
      <h1>Sign Up for a New Store Here!</h1>
      <div class="create-store-form">
        <%= form_for(@photographer, html: { multipart: true },
                                    url: photographers_path) do |f| %>
          <%= render partial: "shared/errors", locals: { object: @photographer } %>

          <div class="form-group">
            <%= f.label      :name, "Store Name" %>
            <%= f.text_field :name, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label       :email %>
            <%= f.email_field :email, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label      :avatar %>
            <%= f.file_field :avatar, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label      :header, "Header Image" %>
            <%= f.file_field :header, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.submit "Submit", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
