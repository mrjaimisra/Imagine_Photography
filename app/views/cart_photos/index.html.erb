<!-- This is the only title not using the partial, need to figure out how to position the shopping cart with sass -->
<div class="container mt-60 mb-60">
  <div class="row mb-20">
    <div class="col-lg-12">
      <h3><span class="glyphicon glyphicon-shopping-cart" aria-hidden="true"> </span> Shopping Cart</h3>
    </div>
  </div>

  <div class="row">
    <div class="col-md-3"><h4>Order Details:</h4></div>
    <div class="col-md-4 col-md-offset-5">
      <div class="btn-group pull-right" role="group" aria-label="...">
        <%= link_to "Keep shopping", explore_path, class: "btn btn-warning" %>
        <%= link_to "Checkout", orders_path, method: :post, class: "btn btn-primary" %>
      </div>
    </div>
  </div>

  <div class="table-responsive">
    <table class="table table-striped">

      <tr>
        <th></th>
        <th>Photo</th>
        <th>Description</th>
        <th>Price</th>
        <th></th>
      </tr>
      <tr>
        <% @cart_photos.each do |cart_photo| %>
          <td class="col-md-1">
            <%= link_to image_tag(cart_photo.photo.image(:thumb),
                                  height: "100px", width: "100px"),
                                  photo_path(cart_photo.photo.id) %>
          </td>
          <td class="col-md-2"><%= cart_photo.name %></td>
          <td class="col-md-2"><%= cart_photo.description %></td>
          <td class="col-md-2"><%= number_to_currency(cart_photo.price) %></td>

          <td class="col-md-2">
            <%= link_to "Remove", cart_photo_path(id: cart_photo), method: :delete %>
          </td>
      </tr>
        <% end %>
        </table>

    <div class="total mt-20">
      <h3>Total: <%= number_to_currency(cart.total) %></h3>
    </div>

  </div>
</div>
