
<!-- This is the only title not using the partial, need to figure out how to position the shopping cart with sass -->
<div class="row">
  <div class="col-lg-12">
    <h3><span class="glyphicon glyphicon-shopping-cart" , aria-hidden="true"></span>Shopping Cart</h3>
  </div>
</div>

<div>
  <div class="row">
    <div class="col-md-3"><h1>Order Details:</h1></div>
    <div class="col-md-6"></div>
    <div class="col-md-3">
      <div class="btn-group" role="group" aria-label="...">
        <button class="btn btn-warning" href="<%= root_path %>">Keep Shopping</button>
        <button class="btn btn-info" href="<%= root_path %>">Checkout</button>
      </div>
    </div>
  </div>

  <div class="table-responsive">
    <table class="table table-striped table-hover">
      <thead>
      <th>Item</th>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Quantity</th>
      <td align="right"><strong>Subtotal</strong></td>
      </thead>
      <tbody>
      <% @items.each do |item| %>
        <tr>
          <td><%= image_tag(item.image_url, height: 80, width: 80, class: "img-circle") %></td>
          <td><%= item.name %></td>
          <td><%= item.description %></td>
          <td><%= item.price %></td>
          <td>
            <button class="btn btn-default" href="<%= cart_items_path %>">-</button>
            <!--cart_item_path(item, quantity: "decrease"), method: :put-->
            <%= "1" %>
            <button class="btn btn-default" href="<%= cart_items_path %>">+</button>
            <!--cart_item_path(item, quantity: "increase"), method: :put-->
          </td>
          <td align="right">$</td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  <hr/>

  <div class="row">
    <div class="col-md-6"></div>
    <div class="col-md-3"><h4>Quantity: Total Quantity => 2</h4></div>
    <div class="col-md-3">
      <div class="btn-group" role="group" aria-label="...">
        <button class="btn btn-warning" href="<%= root_path %>">Keep Shopping</button>
        <button class="btn btn-info" href="<%= root_path %>">Checkout</button>
      </div>
    </div>
  </div>

  <div class="col-md-6"></div>
  <div class="col-md-6"><h4>Subtotal:
    <% total_price = @items.map do |item| %>
      <% item.price %>
    <% end %>
    <%= total_price.reduce(:+) %></h4></div>
</div>
</div>
