<div>
  <h1><span class="glyphicon glyphicon-shopping-cart", aria-hidden="true"></span> Guest's Shopping Cart</h1>
</div>

<div>
  <div class="row">
  <div class="col-md-3"><h2>Order Details:</h2></div>
    <div class="col-md-6"></div>
    <div class="col-md-3">
      <div class="btn-group" role="group" aria-label="...">
        <button class="btn btn-warning" href="<%= root_path %>">Keep Shopping</button>
        <button class="btn btn-info" href="<%= root_path %>">Checkout</button>
      </div>
    </div>
</div>

<div class="table-responsive">
  <table class="table table-striped">
    <tr>
      <th></th>
      <th>Item</th>
      <th>Description</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Subtotal</th>
    </tr>
    <% @cart_items.each do |cart_item| %>
      <td><%= image_tag(cart_item.image_url, height: 80, width:80, class: "img-circle") %></td>
      <td><%= cart_item.name %></td>
      <td><%= cart_item.description %></td>
      <td><%= cart_item.price %>$</td>
      <td><%= button_to "-", cart_items_path(id: "#{cart_item.id}", quantity: "decrease"), method: :put %>
      <%= cart_item.quantity %>
      <%= button_to "+", cart_items_path(id: "#{cart_item.id}", quantity: "increase"), method: :put %></td>
      <div class="subtotal">
        <td><%= cart_item.subtotal %>$</td>
      </div>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

<div class="total">
  <h3>Total: <%= cart.total %>$</h3>
</div>
<hr/>
