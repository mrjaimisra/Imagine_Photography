<h1><%= "Order Number: #{@order.id}" %></h1>

<div class="row">
  <div class="col-md-3"><h4>Details:</h4></div>
  <div class="col-md-6"></div>
  <div class="col-md-3 status pull-right">
    <div>
      <%# if current_user.roles.include?("registered user") && @order.status == "Ordered" || @order.status == "Paid" %>
        <!--Change Status:-->
        <%#= form_for [:admin, @order] do |f| %>
          <%#= f.collection_select(:status, Status.all, :id, :name, { selected: @order.status_id }) %>
          <%#= f.submit "Update Order Status" %>
        <%# end %>
      <%# else %>
        <strong>Status:</strong>
        <%= @order.status %> <br/>
        <%= link_to "Your Orders", orders_path(current_user) %>
      <%# end %>
    </div>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped order">

    <tr>
      <th></th>
      <th>Name</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Subtotal</th>
      <th>Status</th>
      <th>Last Updated</th>
      <th></th>
    </tr>

    <% @order.order_photos.each do |order_photo| %>
      <tr>
        <td><%= link_to image_tag(
                          order_photo.image_url,
                          height: 80,
                          width:  80,
                          class:  "img-circle"
                        ),
                        meal_path(id: order_photo.item_id) %></td>
        <td><%= link_to order_photo.name, meal_path(order_photo) %></td>
        <td><%= number_to_currency(order_photo.price) %></td>
        <td><%= order_photo.quantity %></td>
        <div class="subtotal">
          <td><%= number_to_currency(order_photo.subtotal) %></td>
        </div>
        <td><%= @order.status %></td>
        <td><%= order_photo.updated_at %></td>
        <td><%= link_to "View", meal_path(id: order_photo.id) %></td>
      </tr>
    <% end %>
  </table>

  <div class="total">
    <h3>Total: $<%= @order.total %></h3>
  </div>

</div>
