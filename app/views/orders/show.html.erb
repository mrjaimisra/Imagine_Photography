<div class="container mb-80">
  <br><br><h1><%= "Order ##{@order.id}" %></h1>

  <div class="row">
    <div class="col-md-3">
      <h3>Status: <%= @status.name %></h3>
      <h3>Items:</h3>
    </div>
  </div>

  <div class="table-responsive">
    <table class="table table-striped orders">
      <div class="row">
        <tr>
          <th class="col-md-1">Image</th>
          <th class="col-md-2">Name</th>
          <th class="col-md-2">Price</th>
          <th class="col-md-2">Last Updated</th>
        </tr>
      </div>
      <% @order.order_photos.each do |order_photo| %>
        <div class="row">
          <tr>
            <td class="col-md-1">
              <%= link_to image_tag(order_photo.photo.image(:thumb),
                                    height: "100px", width: "100px"),
                          photo_path(order_photo.photo_id) %>
            </td>
            <td class="col-md-2">
              <%= link_to order_photo.name, photo_path(order_photo.photo_id) %>
            </td>
            <td class="col-md-2">
              <%= number_to_currency(order_photo.price) %>
            </td>
            <td class="col-md-2"><%= order_photo.updated_at %></td>
          </tr>
        </div>
      <% end %>
    </table>
  </div>

  <div class="total">
    <h3>Total: $<%= @order.total %></h3>
  </div>
  <div class="btn btn-primary">
    <%= link_to "Back to Your Orders", orders_path(current_user) %>
  </div>
</div>
