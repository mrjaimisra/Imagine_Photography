

<div class="container mb-80">
  <h1><%= "#{current_user.name}'s Orders" %></h1>
  <br>
  <div class="row">
    <div class="col-md-3"><h4>Details:</h4></div>
  </div>

  <div class="table-responsive">
    <table class="table table-striped orders">
      <div class="row">
        <tr>
          <th class="col-md-1">Order Number</th>
          <th class="col-md-2">Total</th>
          <th class="col-md-2">Order Updated Date</th>
          <th class="col-md-2"></th>
        </tr>
      </div>
      <% @orders.each do |order| %>
        <div class="row">
          <tr>
            <td class="col-md-1">
              <%= link_to order.id, "/orders/#{order.id}" %>
            </td>
            <td class="col-md-2">
              <%= number_to_currency(order.total) %>
            </td>
            <td class="col-md-2">
              <%= order.updated_at.strftime("%A, %b %d %Y %l:%M %p") %>
            </td>
            <td class="col-md-2"><%= link_to "View", order_path(order) %></td>
          </tr>
        </div>
      <% end %>
    </table>
  </div>
</div>
