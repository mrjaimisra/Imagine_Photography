<%= render partial: "layouts/page_title", locals: { page_title: "#{current_user.username}'s Order's" } %>
<%= render partial: "layouts/flash_message" %>

<div class="row">
  <!-- Grid being used for spacing maybe try to do it with sass in view refactor -->
  <div class="col-md-3"><h4>Details:</h4></div>
  <div class="col-md-9"></div>
</div>

<div class="table-responsive">
  <table class="table table-striped orders">

    <tr>
      <th>Order Number</th>
      <th>Total</th>
      <th>Order Date</th>
      <th></th>
    </tr>

    <% @orders.each do |order| %>
      <tr>
        <!--<td><%#= link_to order.id, orders_path(order) %></td>-->
        <td><%= link_to order.id, "/orders/#{order.id}" %></td>
        <td><%= order.total %></td>
        <td><%= order.created_at.strftime("%A, %d %b %Y %l:%M %p") %></td>
        <!--<td><%#= link_to "View", orders_path(order) %></td>-->
        <td><%= link_to "View", "/orders/#{order.id}" %></td>
      </tr>
    <% end %>
  </table>

</div>
