<%= render partial: "layouts/page_title", locals: { page_title: @category.name } %>
<%= render partial: "layouts/flash_message" %>

<div class="row text-center category-view">

  <% @category.items.each do |item| %>

    <div class="col-md-3 col-sm-6 hero-feature category-feature item-box">

      <div class="thumbnail">
        <%= link_to image_tag(item.image_url, alt: "image url", class: "item-image"), meal_path(id: item.id) %>

        <div class="caption">
          <h3><%= link_to item.name, meal_path(id: item.id), alt: "image url", class: "item-image" %></h3>
        </div>

        <p>$<%= item.price %></p>

        <p><%= item.description %></p>

      </div>

    </div>

  <% end %>

</div>
